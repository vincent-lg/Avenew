<window title="TalisMUD - Control Panel">
  <menubar>
    <menu name="Action">
      <item id=build>Start building</item>
      <item>Quit</item>
    </menu>
  </menubar>

  <text x=0 y=0 width=6 id=status read-only multiline>Status</text>
  <button x=0 y=2 id=start disabled>Start TalisMUD</button>
  <button x=2 y=2 id=restart disabled>Restart TalisMUD</button>
  <button x=4 y=2 id=stop disabled>Stop TalisMUD</button>
</window>
